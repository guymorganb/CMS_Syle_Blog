<!--View and comment Post in dashboard with buttons-->

<div data-aos="fade-up" data-aos-delay="0" data-aos-duration="1000" data-aos-once="true" class="col-md-12 text-center">
    <h2 class="text-center font-weight-bold my-5">Community Posts</h2>
</div>
{{#each postDataList}}
    <div data-aos="fade-up" data-aos-delay="0" data-aos-duration="1000" data-aos-once="true" class="col-md-12 text-center post-container" style="background-image: url('{{../imageUrl}}');">
        <img src="{{randomGif}}" alt="Anti-spam" class="mx-auto" style="max-width: 300px; max-height: 300px;">
        <div class="post-elements col-md-10">
        <div class="comment-element">
        <div class="post-section xs-col-2 col-sm-6 col-md-8 col-lg-10">
            <div class="post-title-container">
            <div class="post-title-container">
                <h5 class="post-title">{{this.userPost.title}}</h5>
                <span class="post-author">- {{this.userPost.username}} : {{this.userPost.created}}</span>
            </div>
                <p class="post-content">{{this.userPost.content}}sdgasgagadgagdfgdfgdfgdfgsdfgsdfgsdgsdfgsdfsdfgsdfgsdfgsdfgsdfgsdfgdfgsdgsdfsdfgsdfgsdfgsdfgsdfgsdf {{this.userPost.username}} : {{this.userPost.created}} </p>
            </div>
        </div>
        <div class="comments-only xs-col-2 col-md-4 col-lg-3">
            {{!-- {{#each this.comments}} --}}
            <div id="userComments" data-aos="fade-left" data-aos-delay="0" data-aos-duration="1500" data-aos-once="true" class="col-md-12 text-center post-container" style="background: gray; display: flex; justify-content: space-between; align-items: flex-start;">
                <div class="post-comment-container">
                    <p class="comment-content">{{this.comments.content}}</p>
                    <span class="comment-author">- Author{{this.comments.username}}: {{this.comments.created}}</span>
                </div>
            </div>
            {{!-- {{/each}} --}}
            </div>
            </div>
               <div class="btn-container pl-6 pb-3 d-flex justify-content-start" style="display: flex; justify-content: space-between; width: 90%; margin-top: 10px;">
                <button id="btn-comment" class="btn btn-comment" data-id="{{this.id}}" style="padding: 5px 10px; font-size: 0.8rem;">Comment</button>
                <button id="btn-delete" class="btn btn-delete" data-id="{{this.id}}" style="padding: 5px 10px; font-size: 0.8rem;">Delete</button>
                <button id="btn-update" class="btn btn-update" data-id="{{this.id}}" style="padding: 5px 10px; font-size: 0.8rem;">Update</button>
                </div>
            </div>
    </div>
{{/each}}
